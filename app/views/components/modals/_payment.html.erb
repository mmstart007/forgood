<div class="signup-done-overlay ko hidden">
  <div class="done-container">
    <div class="wrapper">
      <!-- ILLUSTRATION-->
      <%= image_tag "icons/check_KO.png" %>
      <button type="button" class="close-button"><i class="fa fa-times"></i></button>
    </div>
    <span>Une erreur s'est produite !<br><br><small class='error-message'></small></span>
  </div>
</div>

<div class="signup-done-overlay ok hidden">
  <div class="done-container">
    <div class="wrapper">
      <!-- ILLUSTRATION-->
      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
       viewBox="0 0 98.5 98.5" enable-background="new 0 0 98.5 98.5" xml:space="preserve">
        <path class="checkmark" fill="none" stroke-width="3" stroke-miterlimit="10" d="M81.7,17.8C73.5,9.3,62,4,49.2,4
      C24.3,4,4,24.3,4,49.2s20.3,45.2,45.2,45.2s45.2-20.3,45.2-45.2c0-8.6-2.4-16.6-6.5-23.4l0,0L45.6,68.2L24.7,47.3"/>
      </svg>
    </div>
    <span>Merci !<br><small class="success-message"></small></span>
    <%= link_to "Cliquez-ici pour rejoindre l'accueil", member_user_dashboard_path(current_user), class: "" %>
  </div>
</div>

<% content_for(:after_js) do %>
  <script>

    $(document).ready(function() {

      $(".close-button").click(function() {
        $('.signup-done-overlay.ko').addClass('hidden');
      });

    });

  </script>
<% end %>
