<!-- HEADER -->
<div id="header" class="landing-home">
  <!-- HEADER GRADIENT OVERLAY -->
  <div class="header-overlay"></div>
  <div class="container-fluid header-content">
    <div class="row">
      <div class="col-xs-12 text-center">
        <!-- HEADER CONTENT -->
        <%= image_tag('logopouce.png', :class => 'header-logo') %>
        <h1 class="header-title">La révolution positive</h1>
        <p class="header-subtitle">La plateforme qui redonne le pouvoir d'agir dans le bon sens !</p>
        <!-- SIGNUP -->
        <div id="btn-become-home">
          <%= link_to "S'inscrire gratuitement", new_user_registration_path, class: "button button-turquoise" %>
        </div>
