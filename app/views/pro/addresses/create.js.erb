if (<%= !@address.errors.any? %>) {

  // REMOVE FORM CREATE
  $('#<%= @address.day %> .form-create-address').remove();
  $('#<%= @address.day %>').append('<%= j render(partial: "pro/addresses/form/edit", locals: { day: @address.day, address: @address }, formats: [:html]) %>');

  // DISCLAIMER - DISPLAYED
  $(".done-overlay-address").removeClass("hidden");

  window.setTimeout(function(){
    // DISCLAIMER - HIDDEN
    $(".done-overlay-address").addClass("hidden");
  }, 3000);

} else {

  $(".alert").remove();
  $(document).find('#<%= @address.day %>').prepend('<%= j render("components/error_messages", resource: @address, formats: [:html]) %>');
}
