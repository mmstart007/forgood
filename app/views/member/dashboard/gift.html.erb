<%= content_for(:title) do %>
  Cadeau
<% end %>
<%= content_for(:description) do %>
  Plaisir d'offrir
<% end %>

<div class="container-fluid admin">
  <!-- Sub Menu Sidebar -->
  <%= render "member/dashboard/shared/sidebar" %>

  <!-- CREATE GIFT CONFIRMATION -->
  <%= render "components/popups/done" %>
  <!-- GIFT -->
  <div class="connexion dashboard">
    <div class="sign-box gift">
      <!-- Return to SIGNUP -->
      <%= link_to "", member_user_dashboard_path(current_user), class: "close-sign-box" %>
      <div class="signup-card">
        <!-- FORM SUBCRIPTION -->
        <%= render "member/subscribe/shared/form_beneficiary" %>
        <!-- FORM CARD REGISTRATION -->
        <div class="gift-payment hidden">
          <i><%= image_tag 'icons/credit_card.png' %></i>
          <%= render "member/subscribe/shared/form_payment" %>
        </div>
      </div>
    </div>
  </div>
</div>

