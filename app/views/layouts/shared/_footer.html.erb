<div id="footer">
  <div class="col-xs-12 col-sm-2" id="logo-footer">
    <%=image_tag("logopouce.png") %>
  </div>
  <div class="col-xs-12 col-sm-2" id="footer-menu">
    <ul>
      <li class="footer-title">CforGood</li>
      <li><%= link_to "A propos", about_path %></li>
      <li><%= link_to "Notre charte", notre_charte_path %></li>
      <li><%= link_to "Contact", new_contact_form_path %></li>
      <li><%= link_to "FAQ", faq_path %></li>
      <!-- <li><a href="/notre_charte"><p>Presse</p></a></li> -->
    </ul>
  </div>
  <div class="col-xs-12 col-sm-2">
    <ul>
      <li class="footer-title">Communauté</li>
      <!--<li><a href="/notre_charte"><p>Nos Partenaires</p></a></li>-->
      <li><a class="typeform-share" href="https://cforgood1.typeform.com/to/iZ5QFx" data-mode="1" target="_blank"><p>Devenir Ambassadeur</p></a></li>
      <li><%= link_to "Vous êtes une entreprise", landing_business_path %></li>
      <li><%= link_to "Vous êtes une association", landing_cause_path %></li>
    </ul>
  </div>
  <div class="col-xs-12 col-sm-3">
    <ul>
      <li class="footer-title">Légal</li>
      <li><%= link_to "Conditions Générales", cgu_path %></li>
      <li><%= link_to "Charte De Confidentialité", charte_confidentialite_path %></li>
      <li><%= link_to "Mentions Légales", mentions_legales_path %></li>
    </ul>
  </div>
  <div class="col-xs-12 col-sm-3">
    <div class="col-xs-12" id="newsletter-footer">
      <li class="footer-title">Newsletter</li>
        <%= simple_form_for :newsletter, url:  newsletter_path, remote: true, method: :put do |f| %>
          <%= f.input :email, :label => false, :placeholder => "Email", :as => :email %>
          <%= f.button :submit, '>', class: "button button-turquoise" %>
        <% end %>
    </div>
    <div class="col-xs-12" id="social-media">
      <li class="footer-title">Suivez-Nous</li>
        <ul class="list-inline">
            <li>
              <a href="https://www.facebook.com/cforgood?fref=ts" class="link-contrast footer-icon-container-facebook" target="_blank">
                <i class="fa fa-facebook footer-icon"></i>
              </a>
            </li>

            <li>
              <a href="https://twitter.com/CforGood" class="link-contrast footer-icon-container-twitter" target="_blank">
                <i class="fa fa-twitter footer-icon"></i>
              </a>
            </li>

            <li>
              <a href="https://instagram.com/cforgood/" class="link-contrast footer-icon-container-instagram" target="_blank">
                <i class="fa fa-instagram footer-icon"></i>
              </a>
            </li>

            <li>
              <a href="https://fr.linkedin.com/company/cforgood" class="link-contrast footer-icon-container-linkedin" target="_blank">
                <i class="fa fa-linkedin footer-icon"></i>
              </a>
            </li>

        </ul>
    </div>
    <div class="row-space-top-2 col-xs-12">
      <h3>© CforGood 2016</h3>
    </div>
  </div>

    <div class="clear"></div>
    <div class="line-separator col-xs-12 col-sm-4 col-sm-offset-4"></div>
    <div class="clear"></div>
    <div class="text-center" id="sub-footer">
      <p>Réalisé avec <i class="fa fa-heart pl-5 pr-5"></i> à Bordeaux</p>
    </div>
    <div class="clear"></div>
</div>
